<script>
  const swiper = new Swiper('.swiper', { // eslint-disable-line no-unused-vars, no-undef
    modules: [Parallax, EffectShutters],
    effect: 'shutters',
    shuttersEffect: { split: 8 },
    speed: 2000,
    pagination: {
