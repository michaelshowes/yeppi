{% import 'macros.twig' as macros %}
{% set hero = post.meta('home_hero') %}

<article class="hero-home">
  <div class="hero-home-inner">

    <div class="swiper">
      <div class="swiper-wrapper">

        {% for item in hero %}
          <div class="swiper-slide">
            <div class="swiper-slide-overlay"></div>
            <img
              class="swiper-slide-image"
              data-swiper-parallax="40%"
              src="{{ item.image.url }}"
            />

            <div class="swiper-slide-content">

              <div class="eyebrow" data-swiper-parallax="-150">
                {{ item.eyebrow }}
              </div>

              <div class="swiper-slide-title" data-swiper-parallax="-350">
                {{ item.title }}
              </div>

              {% if item.text %}
                <div class="swiper-slide-text" data-swiper-parallax="-850">
                  {{ item.text }}
                </div>
              {% endif %}

              {% if item.button %}
                <a href="{{ item.button.url }}" class="swiper-slide-button button" data-swiper-parallax="-1350">
                  {{ item.button.title }}
                </a>
              {% endif %}

            </div>

          </div>
        {% endfor %}

      </div>
      <div class="swiper-pagination"></div>
    </div>

    {# <div class="hero-home-footer">
      <div class="footer-text">YEPP<span>i</span></div>
    </div> #}


