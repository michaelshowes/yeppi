{% import 'src/macros.twig' as macros %}

<article class="hamburger-menu js-hamburger-menu">
  <div class="hamburger-menu-background">
    {% include "_svg/mobile-menu-bg.twig" %}
  </div>
  <div class="hamburger-menu-inner">

    <div class="menu-header">
      <a href="{{ site.url }}/book" class="button -inverse">Book Appointment</a>
    </div>
    {# <div class="h5 menu-header">Menu</div> #}
    <ul>
      {% for item in main_nav.items %}
        <li class="mobile-nav-items">
          <a href="{{ item.url }}">{{ item.title }}</a>
        </li>
      {% endfor %}
    </ul>

  </div>
</article>
