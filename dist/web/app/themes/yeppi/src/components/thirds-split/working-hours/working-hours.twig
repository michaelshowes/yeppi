{% import 'src/macros.twig' as macros %}

<article class="working-hours">
  <div class="working-hours-inner">

  <div class="content">
    <div class="eyebrow">Our Availability to You</div>
    <h2 class="h3">Working Hours</h2>
    <p>
      Our technicians are avaialable at these hours to attend to your beauty needs. Please keep in mind that we will be closed or operating at reduced hours on major holidays.
    </p>
  </div>

  <ul class="hours">
    {% for item in options.working_hours %}
    <li class="day-hours">
      <span>{{ item.day }}</span>
      <span>{{ item.hours }}</span>
    </li>
    {% endfor %}
  </ul>


  </div>
</article>
